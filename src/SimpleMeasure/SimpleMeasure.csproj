<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.0.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-63102-01" PrivateAssets="All"/>
  </ItemGroup>

  <PropertyGroup>
    <Description>A quick and dirty benchmarking action filter for .NET Core.</Description>
    <Copyright>Copyright Nicholas Myers</Copyright>
    <Authors>Nicholas Myers</Authors>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>SimpleMeasure</AssemblyName>
    <PackageId>SimpleMeasure</PackageId>
    <PackageTags>benchmark measure execution stopwatch</PackageTags>
    <PackageProjectUrl>https://github.com/neekgreen/simple-measure</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>git://github.com/neekgreen/simple-measure</RepositoryUrl>
    <Version>1.1.0</Version>
  </PropertyGroup>

</Project>